<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resultBackgroundColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Calculator"
            android:textColor="@color/operatorColor"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/toSolve"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="@color/numberColor"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="@color/numberColor"
            android:textSize="40dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="7"
        android:background="@color/buttonBackgroundColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="Clear"
                android:text="C"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="percent"
                android:text="%"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="delete"
                android:text="del"
                android:textAllCaps="false"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="divide"
                android:text="/"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="sevenBtn"
                android:text="7"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="eightBtn"
                android:text="8"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="nineBtn"
                android:text="9"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="multiplyBtn"
                android:text="x"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="fourBtn"
                android:text="4"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="fiveBtn"
                android:text="5"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="sixBtn"
                android:text="6"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="subtractBtn"
                android:text="-"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="oneBtn"
                android:text="1"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="twoBtn"
                android:text="2"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="threeBtn"
                android:text="3"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="addBtn"
                android:text="+"
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="doubleZeroBtn"
                android:text="00"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="zeroBtn"
                android:text="0"
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="decimalBtn"
                android:text="."
                android:textColor="@color/numberColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:onClick="equalBtn"
                android:text="="
                android:textColor="@color/operatorColor"
                android:textSize="@dimen/btnDimension"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>